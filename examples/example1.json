{
  "name": "example1",
  "vars": {
    "$backdrop_color": "black"
  },
  // переменные, локальные для пресета
  "shapes": [
    // прямоугольные зоны
    {
      // простой бекдроп
      "type":"rect",
      "id": "id1",  // ID нужен для обращение к величинам этого объекта из других объектов
      "x": 0, "y": 0, // позиция левого верхнего угла
      "hight": 50, "width": 300,  // ширина и высота в пикселях
      "color": "$backdrop_color",// цвет заливки, переменная из контекста шаблона
    },
    {
      "type":"rect",
      "id": "id2",
      "x": 0, "y": -50, // отрицательные значения означают отсчет с противоположной стороны кадра
      "hight": 50,
      "width": "100%", // процентная величина от размера кадра
      "color": [255, 0, 0, 100],  // цвет в формате RGBA
    },
    {
      "type":"rect",
      "id": "id3",
      "x": 0,
      "y": 0,
      "hight": "3ln", // запись "3ln" означает высоту 3х линий текста, автоматически высчитывается из размера шрифта
      "width": "100%",
    },
    {
      "type":"image", // картинка
      "id": "logo",
      "path": "/path/to/example.png",
      // размещаем картинку в центре прямоугольника id3
      "x": "id3.center.x - (self.width/2)", // через обращение к своему параметру
      "y": "id3.top_left.y",  // через готовый метод top_left
      "width": 100, "hight": 100, // задаём жесткий размер картинки
      "resize_mode": "crop", // crop: обрезать то что не местилось, stretch: растянуть в размер
      "opacity": 100
    },
    {
      "type":"image",  // картинка в углу без ресайза
      "path": "/path/to/example.png",
      "x": 100, "y": 100
    },
    {
      "type":"label",  // текст
      "text": "$project_name", // переменные из контекста рендеринга
      "font_size": "140%", // увеличиваем размер шрифта
      "pos": "id3.line[1]" // забираем координаты текстовой линии из прямоугольника
    }
  ]
}